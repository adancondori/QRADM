<div class="card-block">
    <div align="left">
    <%= link_to 'New Gruop Extra Point', new_group_extra_point_path, class: "btn btn-success mt-4 ml-3" %>
    </div>
  <section class="example mt-4">
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Amount</th>
              <th>Date done</th>
              <th>Group</th>
              <th>Extra point</th>
              <th>Usuario</th>
              <th>Observacion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% group_extra_points.each do |group_extra_point| %>
            <tr>
              <td><%= group_extra_point.amount %></td>
              <td><%= group_extra_point.date_done %></td>
              <td><%= group_extra_point.group.name %></td>
              <td><%= group_extra_point.extra_point.name %></td>
              <td><%= group_extra_point.user.full_name %></td>
              <td><%= group_extra_point.observation %></td>
              <td><%= link_to 'Show', group_extra_point, class: "btn btn-dark" %></td>
              <td><%= link_to 'Edit', edit_group_extra_point_path(group_extra_point), class: "btn btn-primary" %></td>
              <td><%= link_to 'Destroy', group_extra_point, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <br>
      </div>
    </div>
  </section>
</div>

<p id="notice"><%= notice %></p>


