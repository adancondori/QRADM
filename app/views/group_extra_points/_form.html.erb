<div class="card-block">
    <section class="example">
    <%= form_with(model: group_extra_point) do |form| %>
      <% if group_extra_point.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(group_extra_point.errors.count, "error") %> prohibited this group_extra_point from being saved:</h2>
    
          <ul>
            <% group_extra_point.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
            <div class="row">
                <div class="col-md-12">
                    <section class="panel">
                        <div class="panel-body">
                          <div class="form-group">
                            <%= form.label :amount,class: 'negrita' %>
                            <%= form.text_field :amount, class: 'form-control'  %>
                          </div>
                      
                          <div class="form-group">
                            <%= form.label :date_done %>
                            <%= form.datetime_select :date_done %>
                          </div>
                        
                          <div class="form-group">
                            <%= form.label :group_id %>
                            <%= form.select :group_id, options_from_collection_for_select(Group.all, 'id', 'name', '1') %>
                          </div>
                        
                          <div class="form-group">
                            <%= form.label :extra_point_id %>
                            <%= form.select :extra_point_id, options_from_collection_for_select(ExtraPoint.all, 'id', 'name', '1') %>
                          </div>
                        
                          <div class="actions">
                            <%= form.submit %>
                          </div>

                  
                            <br />
                            <br />
                        </div>
                    </section>
                </div>
            </div>
      <% end %>
    </section>
</div>


