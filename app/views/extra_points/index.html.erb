<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Extra Point</h1>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="index">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">Extra Point</li>
    </ol>
  </nav>
</div>
<div class="card-block">
    <div align="left">
    <%= link_to 'New Extra Point', new_extra_point_path, class: "btn btn-success mt-4 ml-3"  %>
    </div>
  <section class="example mt-4">
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Amount</th>
              <th>Name</th>
              <th>Description</th>
              <th>Event</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @extra_points.each do |extra_point| %>
              <tr>
                <td><%= extra_point.amount %></td>
                <td><%= extra_point.name %></td>
                <td><%= extra_point.description %></td>
                <td><%= extra_point.event_id %>
                </td>
                  <td><%= link_to 'Show', extra_point, class: "btn btn-dark" %></td>
                  <td><%= link_to 'Edit', edit_extra_point_path(extra_point), class: "btn btn-primary" %></td>
                  <td><%= link_to 'Destroy', extra_point, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                </td>
            <% end %>
          </tbody>
        </table>
        <br>
      </div>
    </div>
  </section>
</div>

<p id="notice"><%= notice %></p>

