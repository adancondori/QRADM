<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Actividad</h1>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="index">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">Activity</li>
    </ol>
  </nav>
</div>
<div class="card-block">
    <div align="left">
      <%= link_to t("button_action.add"), new_activity_path, class: "btn btn-success mt-4 ml-3" %>
    </div>
  <section class="example mt-4">
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Rules</th>
              <th>Code</th>
              <th>Date init</th>
              <th>Date end</th>
              <th>Amount</th>
              <th>Is close</th>
              <th>State</th>
              <th>Is visible</th>
              <th>Event</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @activities.each do |activity| %>
            <tr>
                <td><%= activity.name %></td>
                <td><%= activity.description[0..100].gsub(/\s\w+\s*$/,'...') %></td>
                <td><%= activity.rules %></td>
                <td><%= activity.code %></td>
                <td><%= activity.date_init %></td>
                <td><%= activity.date_end %></td>
                <td><%= activity.amount %></td>
                <td><%= activity.is_close %></td>
                <td><%= activity.state %></td>
                <td><%= activity.is_visible %></td>
                <td><%= activity.event_id %></td>
                <td class="v-align-middle">
                  <%= link_to t("button_action.view"), activity, class: "btn btn-dark" %>
                  <%= link_to t("button_action.edit"), edit_activity_path(activity), class: "btn btn-primary" %>
                  <%= link_to t("button_action.destroy"), activity, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                </td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <br>
      </div>
    </div>
  </section>
</div>

<p id="notice"><%= notice %></p>


