<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Show Group Activity</h1>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page">Show Group Activity</li>
      </ol>
    </nav>
</div>
<div class="card-block">
    <section class="text-center">
        <div class="container">
            <h3 class="jumbotron-heading"><%= @group_activity.activity.name %></h3>
        </div>
    </section>

    <div class="">
        <div class="container">
            <div class="row">
                <div class="col-md-12" align="left">

                <p id="notice"><%= notice %></p>

                <p>
                  <strong>Amount:</strong>
                  <%= @group_activity.amount %>
                </p>
                
                <p>
                  <strong>Date done:</strong>
                  <%= @group_activity.date_done %>
                </p>
                
                <p>
                  <strong>Group:</strong>
                  <%= @group_activity.group.name %>
                </p>
                
                <p>
                  <strong>Activity:</strong>
                  <%= @group_activity.activity.name %>
                </p>
                
                <p>
                  <strong>Observation:</strong>
                  <%= @group_activity.observation %>
                </p>
                
                <p>
                  <strong>User:</strong>
                  <%= @group_activity.user.full_name %>
                </p>
              <%= link_to t("button_action.edit"), edit_group_activity_path(@group_activity), class: "btn btn-dark" %> |
              <%= link_to t("button_action.back"), group_activities_path, class: "btn btn-primary" %>
                </div>
            </div>
        </div>
    </div>
</div>
