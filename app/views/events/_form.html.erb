<div class="card-block">
    <section class="example">
      <%= form_with(model: event) do |form| %>
        <% if event.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
      
            <ul>
              <% event.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
            <div class="row">
                <div class="col-md-12">
                    <section class="panel">
                        <div class="panel-body">
                            <div class="form-group">
                                <%= form.label :name, class: 'negrita' %>
                                <div>
                                    <%= form.text_field :name, class: 'form-control' %>
                                </div>
                            </div>
                            <div class="form-group">
                                <%= form.label :description, class: 'negrita' %>
                                <div>
                                    <%= form.text_field :description, class: 'form-control' %>
                                </div>
                            </div>
                            <div class="form-group">
                                <%= form.label :code, class: 'negrita' %>
                                <div>
                                    <%= form.text_field :code, class: 'form-control' %>
                                </div>
                            </div>
                            <div class="form-group">
                              <%= form.label :amount, class: 'negrita' %>
                              <div>
                                  <%= form.number_field :amount, class: 'form-control' %>
                              </div>
                            </div>
                            <div class="form-group">
                              <%= form.label :type_validation, class: 'negrita' %>
                              <div>
                                  <%= form.number_field :type_validation, class: 'form-control' %>
                              </div>
                            </div>
                            <div class="form-group">
                              <%= form.label :init_date, class: 'negrita' %>
                              <div>
                                  <%= form.datetime_select :init_date, class: 'form-control' %>
                              </div>
                            </div>
                            <div class="form-group">
                              <%= form.label :end_date, class: 'negrita' %>
                              <div>
                                  <%= form.datetime_select :end_date, class: 'form-control' %>
                              </div>
                            </div>

                            <div class="actions">
                              <%= form.submit %>
                            </div>
                            <br />
                            <br />
                        </div>
                    </section>
                </div>
            </div>
      <% end %>
    </section>
</div>
