<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page">Postres</li>
      </ol>
    </nav>
</div>
<div class="card-block">
    <div align="left">
        <%= link_to t("button_action.add"), new_event_path, class: "btn btn-success mt-4 ml-3" %>
    </div>

    <section class="example mt-4">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                          <th><%= t('event.name')%></th>
                          <th><%= t('event.description')%></th>
                          <th><%= t('event.code')%></th>
                          <th><%= t('event.amount')%></th>
                          <th><%= t('event.type_validation')%></th>
                          <th><%= t('event.init_date')%></th>
                          <th><%= t('event.end_date')%></th>
                          <th> Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @events.each do |event| %>
                          <tr>
                            <td class="v-align-middle"><%= event.name %></td>
                            <td class="v-align-middle"><%= event.description %></td>
                            <td class="v-align-middle"><%= event.code %></td>
                            <td class="v-align-middle"><%= event.amount %></td>
                            <td class="v-align-middle"><%= event.type_validation %></td>
                            <td class="v-align-middle"><%= event.init_date %></td>
                            <td class="v-align-middle"><%= event.end_date %></td>
                            <td class="v-align-middle">
                              <%= link_to t("button_helper.view_group"), event_groups_event_path(event), class: "btn btn-dark" %>
                              <%= link_to t("button_action.view"), event, class: "btn btn-dark" %>
                              <%= link_to t("button_action.edit"), edit_event_path(event), class: "btn btn-primary" %>
                              <%= link_to t("button_action.destroy"), event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                            </td>
                          </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

