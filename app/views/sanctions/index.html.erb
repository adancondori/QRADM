<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Sanctions</h1>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="index">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">Activity</li>
    </ol>
  </nav>
</div>
<div class="card-block">
    <div align="left">
      <%= link_to t("button_action.add"), new_activity_path, class: "btn btn-success mt-4 ml-3" %>
    </div>
  <section class="example mt-4">
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Amount</th>
            <th>Name</th>
            <th>Description</th>
            <th>Event</th>
            <th>User</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @sanctions.each do |sanction| %>
          <tr>
            <td><%= sanction.amount %></td>
            <td><%= sanction.name %></td>
            <td><%= sanction.description[0..100].gsub(/\s\w+\s*$/,'...') %></td>
            <td><%= sanction.event_id %></td>
            <td><%= sanction.user_id %></td>
            <td><%= link_to 'Show', sanction, class: "btn btn-dark"%></td>
            <td><%= link_to 'Edit', edit_sanction_path(sanction), class: "btn btn-primary" %></td>
            <td><%= link_to 'Destroy', sanction, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
        </table>
        <br>
        <%= link_to 'New Sanction', new_sanction_path %>

      </div>
    </div>
  </section>
</div>

<p id="notice"><%= notice %></p>




