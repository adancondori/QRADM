<p id="notice"><%= notice %></p>

<h1>Sanctions</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Name</th>
      <th>Description</th>
      <th>Event</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sanctions.each do |sanction| %>
      <tr>
        <td><%= sanction.amount %></td>
        <td><%= sanction.name %></td>
        <td><%= sanction.description %></td>
        <td><%= sanction.event_id %></td>
        <td><%= sanction.user_id %></td>
        <td><%= link_to 'Show', sanction %></td>
        <td><%= link_to 'Edit', edit_sanction_path(sanction) %></td>
        <td><%= link_to 'Destroy', sanction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sanction', new_sanction_path %>
