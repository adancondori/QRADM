<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">People</h1>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="index">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">People</li>
    </ol>
  </nav>
</div>
<div class="card-block">
    <div align="left">
      <%= link_to t("button_action.add"), new_person_path, class: "btn btn-success mt-4 ml-3" %>
    </div>
  <section class="example mt-4">
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Last name</th>
              <th>Phone</th>
              <th>Code</th>
              <th>State</th>
              <th>Group</th>
              <th>Event</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @people.each do |person| %>
              <tr>
                <td><%= person.name %></td>
                <td><%= person.last_name %></td>
                <td><%= person.phone %></td>
                <td><%= person.code %></td>
                <td><%= person.state %></td>
                <td><%= person.group.name %></td>
                <td><%= person.event.name %></td>
                  <td class="v-align-middle">
                    <%= link_to t("button_action.view"), person, class: "btn btn-dark" %>
                    <%= link_to t("button_action.edit"), edit_person_path(person), class: "btn btn-primary" %>
                    <%= link_to t("button_action.destroy"), person, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                  </td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <br>
      </div>
    </div>
  </section>
</div>



